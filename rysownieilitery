//piramida 

#include <stdio.h>

void draw_pyramid(int n) {
    for (int i = 1; i <= n; i++) {       // Iteracja po wierszach
        for (int j = 1; j <= i; j++) {   // Iteracja po kolumnach w wierszu
            printf("* ");               // Rysowanie gwiazdek
        }
        printf("\n");                   // Nowy wiersz
    }
}

int main() {
    int n;
    printf("Podaj liczbe wierszy: ");
    scanf("%d", &n);
    draw_pyramid(n);
    return 0;
}


//B

for (int i = 0; i < n; i++) {
    for (int j = 0; j < n; j++) {
        if (j == 0 || (i == 0 && j < n - 1) || (i == n / 2 && j < n - 1) || (i == n - 1 && j < n - 1) || (i < n / 2 && j == n - 1) || (i > n / 2 && j == n - 1)) {
            printf("*");
        } else {
            printf(" ");
        }
    }
    printf("\n");
}


//A

for (int i = 0; i < n; i++) {
    for (int j = 0; j < 2 * n - 1; j++) {
        if (j == n - i - 1 || j == n + i - 1 || (i == n / 2 && j > n - i - 1 && j < n + i - 1)) {
            printf("*");
        } else {
            printf(" ");
        }
    }
    printf("\n");
}


//L

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery L: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j == 0 || (i == n - 1 && j < n)) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//E

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery E: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j == 0 || (i == 0 && j < n) || (i == n / 2 && j < n) || (i == n - 1 && j < n)) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//C

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery C: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j == 0 || (i == 0 && j < n) || (i == n - 1 && j < n)) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//M

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery M: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < 2 * n - 1; j++) {
            if (j == 0 || j == 2 * n - 2 || (i == j && j < n) || (i + j == 2 * n - 2 && j >= n)) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}

//X

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery X: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i == j || i + j == n - 1) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//Y

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery Y: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if ((i == j && i < n / 2) || (i + j == n - 1 && i < n / 2) || (j == n / 2 && i >= n / 2)) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//Z

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość litery Z: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i == 0 || i == n - 1 || i + j == n - 1) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}


//trójkąt prostokątny

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość trójkąta: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}


//choinka

#include <stdio.h>

int main() {
    int n;
    printf("Podaj wysokość choinki: ");
    scanf("%d", &n);

    // Rysowanie góry choinki
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        for (int j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }

    // Rysowanie pnia choinki
    for (int i = 1; i <= 2; i++) {
        for (int j = 1; j <= n - 1; j++) {
            printf(" ");
        }
        printf("*\n");
    }

    return 0;
}



